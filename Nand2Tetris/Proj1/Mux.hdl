/** 
 * Multiplexor:
 * if (sel = 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=notS);
    And(a=a,b=notS, out=aSelected);
    And(a=b, b=sel, out=bSelected);
    Or(a=aSelected, b=bSelected, out=out);
}